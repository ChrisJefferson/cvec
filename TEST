gens := AtlasGenerators("Fi22",13).generators;
m := CMat(gens[2]);
b := EmptySemiEchelonBasis( m[1] );
for v in m do CleanRow(b,ShallowCopy(v),true); od;
w := CVec(Random(GF(5)^428));
x := ZeroVector(w,Length(b.vectors));
a := CleanRow(b,ShallowCopy(w),x);
if x * b.vectors <> w then Error(); fi;
b2 := EmptySemiEchelonBasis( m[1], 3 );
#glc := ApplicableMethod( GetLinearCombination, [b2.lazygreaser,w,1,[1,2,3]] );
#b2.lazygreaser!.ind := L
for v in m do CleanRow(b2,ShallowCopy(v),true); od;
a := CleanRow(b2,ShallowCopy(w),x);
if x * b2.vectors <> w then Error(); fi;


